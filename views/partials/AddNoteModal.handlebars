<div id="new-note-modal" class="modal" data-classname="">

  <!-- Modal content -->
  <div class="modal-content">
    <div class="modal-header">
      <h2>New Note</h2>
    </div>

    <div class="post-input-element">
      <label for="post-text-input">Date</label>
      <input id="today" type="date">
    </div>

    <div class="post-input-element">
      <label for="post-text-input">Note Title</label>
      <input type="text" id="new-note-title-input"></input>
    </div>

    <div class="button-container">
      <button class="button" id="new-note-close-button">Cancel</button>
      <button class="button" id="new-note-OK-button">Create</button>
    </div>
  </div>
</div>
